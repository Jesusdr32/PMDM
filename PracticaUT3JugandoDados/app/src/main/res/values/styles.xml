<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TituloSaldo">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="TextoResultado">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="BotonPrincipal" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>


    <style name="BotonSecundario" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>